<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    tools:context="com.cibeg.cibreserve.BranchesActivity">

    <ImageView
        android:id="@+id/logo"
        android:contentDescription="Bank Logo"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Select date you want to reserve"
    android:id="@+id/txtDate"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="6dp"
    android:gravity="center"
        android:textColor="#3F51B5"
        android:layout_below="@id/logo"
    android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set date"
        android:id="@+id/SetDate"
        android:layout_below="@id/txtDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select process"
        android:id="@+id/process_type"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#3F51B5"
        android:layout_below="@id/SetDate"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:textSize="20dp" />
    <Spinner
        android:id="@+id/process_spinner"
        android:layout_below="@id/process_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
    </Spinner>

</RelativeLayout>



