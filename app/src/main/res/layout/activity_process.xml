<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.cibeg.cibreserve.BranchesActivity">


    <ImageView
        android:id="@+id/logo"
        android:contentDescription="Bank Logo"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Select date you want to reserve "
    android:id="@+id/txtDate"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="6dp"
    android:gravity="center"
        android:textColor="#3F51B5"
        android:layout_below="@id/logo"
    android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set date"
        android:id="@+id/SetDate"
        android:layout_below="@id/txtDate"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#F57C00"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:textColorHighlight="@color/accent"
        android:shadowColor="@color/accent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select process"
        android:id="@+id/process_type"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#3F51B5"
        android:layout_below="@id/SetDate"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="6dp"
        android:layout_alignParentLeft="true"
        android:textSize="20dp" />
    <Spinner
        android:id="@+id/process_spinner"
        android:layout_below="@id/process_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
    </Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/text_process"
        android:layout_marginStart="6dp"
        android:textColor="#F57C00"
        android:layout_below="@id/process_spinner"
        android:textSize="14dp" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabProcess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:backgroundTint="#F57C00"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_navigate_next_black_24px"
        app:fabSize="normal"
        android:layout_margin="25dp" />


</RelativeLayout>



