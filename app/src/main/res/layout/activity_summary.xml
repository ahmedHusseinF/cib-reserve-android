<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity">

    <ImageView
        android:id="@+id/summary_logo"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/sum_bank_label"
        android:textColor="@android:color/black"
        android:layout_below="@id/summary_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Bank :"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/sum_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/summary_logo"
        android:layout_toEndOf="@id/sum_bank_label"/>

    <TextView
        android:id="@+id/sum_branch_label"
        android:textColor="@android:color/black"
        android:layout_below="@id/sum_bank_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Branch :"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/sum_branch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:layout_below="@id/sum_bank_label"
        android:layout_toEndOf="@id/sum_bank_label"/>

    <TextView
        android:id="@+id/sum_date_label"
        android:textColor="@android:color/black"
        android:layout_below="@id/sum_branch_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Date :"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/sum_date_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:layout_below="@id/sum_branch_label"
        android:layout_toEndOf="@id/sum_bank_label"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_below="@id/sum_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CancelButton"
        android:layout_marginTop="50dp"
        android:text="Cancel"/>
</RelativeLayout>