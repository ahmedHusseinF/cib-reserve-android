<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.cibeg.cibreserve.BranchesActivity">

    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:id="@+id/bank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select a Bank"
        android:textColor="@color/primary"
        android:layout_below="@id/logo"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
         />

    <Spinner
        android:id="@+id/banks_spinner"
        android:layout_below="@id/bank_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        >
    </Spinner>

    <TextView
        android:layout_below="@id/banks_spinner"
        android:id="@+id/branch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select a Branch"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />

    <Spinner
        android:layout_below="@id/branch_text"
        android:id="@+id/branches_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
    </Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/text_branchesparameters"
        android:layout_marginStart="6dp"
        android:textColor="#F57C00"
        android:layout_below="@id/branches_spinner"
        android:layout_marginLeft="20dp"

        android:textSize="14dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@color/accent"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_navigate_next_black_24px"
        app:fabSize="normal"
        android:layout_margin="25dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/accent"
        app:srcCompat="@android:drawable/ic_menu_manage" />


</RelativeLayout>
